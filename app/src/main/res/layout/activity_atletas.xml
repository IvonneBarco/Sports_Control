<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Atletas">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATLETAS"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idSesiona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID USER:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rolSesiona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROL:"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_idliga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID ATLETA"/>

    <TextView
        android:id="@+id/id_iddeporte_liga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID DEPORTE"/>


    <TextView
        android:id="@+id/listar_atleta"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA:"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerAtletasId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>